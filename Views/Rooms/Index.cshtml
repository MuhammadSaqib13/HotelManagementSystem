@model IEnumerable<Hotel_MS.Models.Room>

@{
    ViewBag.Title = "Index";
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left: 250px;">Rooms</h2>
<p style="margin-left: 250px;">
    @Html.ActionLink("Create New", "Create")
</p>
<center>
    <table style="width: 50%;"  class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Room_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsClean)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.No_Of_Persons)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Room_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room_Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsClean)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.No_Of_Persons)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Room_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Room_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Room_Id })
                </td>

            </tr>
        }

    </table>
</center>