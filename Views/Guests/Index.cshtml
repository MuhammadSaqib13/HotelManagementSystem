@model IEnumerable<Hotel_MS.Models.Guest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left: 250px;">Guest Information</h2>

<p style="margin-left: 250px;">
    @Html.ActionLink("Create New", "Create")
</p>
<center>
    <table style="width: 50%;" class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customers.First_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Children)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone_Number)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customers.First_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Members)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adults)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Children)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone_Number)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Guest_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Guest_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Guest_Id })
                </td>
            </tr>
        }

    </table>
</center>