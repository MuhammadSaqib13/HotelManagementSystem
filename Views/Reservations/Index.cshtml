@model IEnumerable<Hotel_MS.Models.Reservation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left: 250px;">Reservation</h2>

<p style="margin-left: 250px;">
    @Html.ActionLink("Create New", "Create")
</p>
<center>
    <table style="width: 50%;" class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customers.First_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms.Room_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departure_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrival_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.No_of_Persons)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customers.First_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rooms.Room_Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departure_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Arrival_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.No_of_Persons)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Reservation_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Reservation_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Reservation_Id })
                </td>
            </tr>
        }

    </table>
</center>